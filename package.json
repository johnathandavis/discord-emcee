{
  "name": "discord-emcee",
  "version": "1.0.0",
  "description": "A library for easily building user interfaces on top of the Discord MessageComponent APIs.",
  "main": "index.js",
  "scripts": {
    "release": "npm run format && npm run lint && npm run build && npm run test && npm run docs",
    "build": "tsc",
    "test": "jest && npm run test:badge",
    "test:badge": "npx jest-coverage-badges input \"./reports/coverage/coverage-summary.json\" output \"./images/badges\"",
    "docs": "npx api-documenter markdown --input-folder src --output-folder docs/",
    "lint": "npx eslint src/**/*.ts",
    "format": "npx prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/events": "^3.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-html-reporter": "^3.10.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "discord.js": "^14.13.0",
    "events": "^3.3.0"
  }
}
