{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationDir": "dist/types",
        "declarationMap": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "isolatedModules": true,
        "lib": ["esnext"],
        "moduleResolution": "node",
        "pretty": true,
        "rootDir": "src",
        "strict": true,
        "target": "es2022",
        "types": ["node", "jest"]
    },
    "compileOnSave": false,
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
}